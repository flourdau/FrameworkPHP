<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- CDN -->
        <link rel="stylesheet" href="/adm/twbs/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel="stylesheet" href="/adm/cdn/animate.css">

        <!-- FONTS -->
        <link rel="stylesheet" href="/design/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/design/fonts/Icons/material-icons.css">
        <link rel="stylesheet" type="text/css"  href="/design/fonts/OpenSans/OpenSans.css" />

{% block stylesheets %}
        <!-- CSS -->
        <link rel="stylesheet" href="/design/css/index.css" />        
        <link rel="stylesheet" href="/design/css/fonts-size.css" />        

{% endblock %}
    </head>
{% block body %}
    <body class="text-center">
{% block nav %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark"></nav>
{% endblock %}
{% block header %}
        <header>
            <h1 class="animate__animated animate__backInDown">{{ title.SITE.APP_TITLE|raw }}</h1>
            <h2>{{ title.SITE.APP_DESCRIPTION }}</h2>
        </header>
{% endblock %}
{% block main %}
        <main></main>
{% endblock %}
{% block footer %}
        <footer class="footer mt-auto py-3">
            <address>
                <span>&copy; | 2K19 - {{ "now"|date("Y") }} | </span>
                <a href="mailto:{{ title.WEB_MASTER.APP_MAIL_WM }}">{{ title.WEB_MASTER.APP_LASTNAME_WM }} {{ title.WEB_MASTER.APP_FIRSTNAME_WM }}</a>
            </address>
        </footer>
{% endblock %}
    </body>
{% endblock %}
    <script src="/adm/jquery/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="/adm/cdn/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="/adm/twbs/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
{% block javascripts %}{% endblock %}
</html>

